{
  "manifest_version": 2,

  "name": "Zoom Controls",
  "description": "This extension adds skip/rewind, playback, picture-in-picture video controls and keyboard shortcuts to the Zoom Recorded Video player.",
  "version": "1.0",
  "icons": {"128": "icon.png" },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.zoom.us/*"
      ],
      "js": [
          "jquery.min.js",
        "utilities.js"
      ],      
    "run_at": "document_idle"
    }
    
  ]
}